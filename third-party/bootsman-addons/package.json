{
  "name": "@soft-stech/bootsman-addons",
  "version": "0.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommy351/kubernetes-models-ts.git"
  },
  "homepage": "https://github.com/tommy351/kubernetes-models-ts/tree/master/third-party/bootsman-addons",
  "author": "Ilya Artamonov",
  "license": "MIT",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsx scripts/download-crd.ts && crd-generate && tsx scripts/defaults.ts && publish-scripts build",
    "prepack": "publish-scripts prepack",
    "generate": "crd-generate"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "linkDirectory": true
  },
  "keywords": [
    "kubernetes",
    "kubernetes-models",
    "bootsman-addons"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@soft-stech/apimachinery": "workspace:^",
    "@soft-stech/base": "workspace:^",
    "@soft-stech/validate": "workspace:^",
    "consola": "^3.4.0",
    "dotenv": "^16.4.7",
    "es-toolkit": "^1.32.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "tslib": "^2.4.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@soft-stech/crd-generate": "workspace:^",
    "@soft-stech/openapi-generate": "workspace:^",
    "@soft-stech/publish-scripts": "workspace:^",
    "@soft-stech/read-input": "workspace:^",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.23",
    "tsx": "^4.19.3"
  },
  "crd-generate": {
    "input": [
      "./src/crds/crds.yaml"
    ],
    "output": "./gen"
  },
  "type": "module"
}
